#!/bin/sh

CC='clang' CFLAGS="-DENABLE_SPA -DENABLE_KLEE -I`pwd`/../../include -emit-llvm -use-gold-plugin -O0 -g" \
CXX='clang++' CXXFLAGS="-DENABLE_SPA -DENABLE_KLEE -I`pwd`/../../include -emit-llvm -use-gold-plugin -O0 -g" \
LD='llvm-link' \
CPP='clang -E' \
./configure \
    --enable-encryption=no \
    --enable-pool-allocators=no \
    --enable-invariant-checks=yes \
    --enable-deprecated-functions=no \
    --enable-statistics=no \
    --enable-disk-stats=no \
    --enable-geoip=no \
    --enable-examples=yes \
    --enable-tests=no \
    --enable-python-binding=no 
