#!/bin/sh

CFLAGS="-O0 -g -I`pwd`/../../include -DBOOST_DISABLE_THREADS" \
CXXFLAGS='-O0 -g -DBOOST_DISABLE_THREADS' \
./configure \
    --enable-encryption=no \
    --enable-pool-allocators=no \
    --enable-deprecated-functions=no \
    --enable-statistics=no \
    --enable-disk-stats=no \
    --enable-geoip=no \
    --enable-examples=yes \
    --enable-tests=no \
    --enable-python-binding=no  \
    --enable-shared=no \
    --enable-static=no
