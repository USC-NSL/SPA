#!/bin/sh

CFLAGS="-O0 -g -I`pwd`/../../include" CXXFLAGS='-O0 -g' \
./configure \
    --enable-encryption=no \
    --enable-pool-allocators=no \
    --enable-deprecated-functions=no \
    --enable-statistics=no \
    --enable-disk-stats=no \
    --enable-geoip=no \
    --enable-examples=yes \
    --enable-tests=no \
    --enable-python-binding=no  \
    --enable-shared=no \
    --enable-static=no
