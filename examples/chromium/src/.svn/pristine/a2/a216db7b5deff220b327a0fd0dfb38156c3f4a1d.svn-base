html {
  background-attachment: fixed;
  background-color: $2;
  background-image: -webkit-image-set(
    url(chrome://theme/IDR_THEME_NTP_BACKGROUND?$1) 1x);
  background-position: $3;
  background-repeat: $5;
  height: 100%;
  overflow: auto;
}

html[bookmarkbarattached='true'] {
  background-position: $4;
}
