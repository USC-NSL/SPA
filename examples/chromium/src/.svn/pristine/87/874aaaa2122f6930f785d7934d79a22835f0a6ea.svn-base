body {
  background-image: -webkit-linear-gradient(rgb(226, 241, 255), white);
  background-repeat: no-repeat;
  color: #444;
  margin: 76px;
}

#actions {
  font-size: 2em;
  margin: 64px 0;
}

#robot {
  bottom: 35px;
  height: 675px;
  position: absolute;
  right: 35px;
}

#block-page-title {
  font-size: 3em;
}

