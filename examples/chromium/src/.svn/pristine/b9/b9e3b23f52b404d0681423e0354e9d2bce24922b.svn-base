html {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

body {
  overflow: hidden;
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  font-family: Arial, Helvetica, sans-serif, Tahoma, Verdana, sans-serif;
  font-size: 10pt;
  background: #ededed;
}

body {
  display: -webkit-flex;
  -webkit-flex-direction: column;
}

#viewer {
  -webkit-flex: 1;
  display: -webkit-flex;
}

#viewer > x-model-view {
  -webkit-flex: 1;
}
