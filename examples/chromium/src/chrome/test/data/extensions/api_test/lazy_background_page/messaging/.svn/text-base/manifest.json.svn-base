{
  "name": "Lazy BG messaging test",
  "description": "Test that message passing starts the background page",
  "version": "1",
  "manifest_version": 2,
  "permissions": ["experimental"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ]
}
