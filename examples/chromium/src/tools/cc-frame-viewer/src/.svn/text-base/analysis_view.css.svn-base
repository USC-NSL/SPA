x-analysis-view {
    display: -webkit-flex;
    -webkit-flex-direction: column;
}

x-analysis-view > x-list-and-associated-view {
    -webkit-flex: 1;
    min-height: 100px;
}

x-analysis-view x-tile-view {
    overflow: auto;
}

x-analysis-view x-list-view > .list-item[selected] {
    background-color: rgb(156,189,45);
}

x-analysis-view x-list-view:focus > .list-item[selected] {
    background-color: rgb(187,226,54);
}
