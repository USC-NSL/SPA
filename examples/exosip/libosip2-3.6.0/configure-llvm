#!/bin/sh

CC='clang' CFLAGS="-DENABLE_SPA -DENABLE_KLEE -I`pwd`/../../../include -emit-llvm -use-gold-plugin -O0 -g" \
LD='llvm-link' CPP='clang -E' AR='echo' RANLIB='echo' ./configure \
--disable-shared \
--enable-static \
--enable-debug \
--disable-trace \
--disable-mpatrol \
--disable-gprof \
--disable-mt \
--enable-test
